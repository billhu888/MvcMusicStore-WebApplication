@model MvcMusicStore.Models.Album

@{
    ViewData["Title"]  = "Details";
}

<h2>Album: @Model.Title</h2>

<p>
    <img alt="@Model.Title" src="/Images/placeholder.gif" />
</p>

<div id="album-details">
    <p>
        <em>Genre:</em>
        @Model.GenreName
    </p>

    <p>
        <em>Artist:</em>
        @Model.ArtistName
    </p>

    <p>
        <em>Price:</em>
        @String.Format("{0:F}", Model.Price)
    </p>

    <p class="button">
        @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { AlbumId = Model.AlbumId }, "")
    </p>
</div>